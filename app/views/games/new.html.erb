<div class="container">
<h1>New game</h1>
<div><% @letters.each do |letter| %>
  <span class="border my-50 p-2 bg-primary text-white"><%= letter %></span>
  <% end %>
</div>

<div class="mt-5">
<form class="mt-100" action="/score" method="POST" data-turbo="false">
  <label for="word">What is the longest word you can find?</label>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
    <input type="text" class="form-control" name="word">
    <input type="submit" value="Play" class="btn btn-primary">

</form>
</div>



</div>
